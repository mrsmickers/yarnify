# Core
NODE_ENV=development
DATABASE_URL=postgresql://speekit:speekit@localhost:5432/speekit?schema=public
REDIS_URL=redis://localhost:6379/0
FILE_STORAGE_ROOT=storage-data
FRONTEND_URL=http://localhost:3000

# Entra (Azure AD) authentication
ENTRA_TENANT_ID=<replace-with-tenant-guid>
ENTRA_CLIENT_ID=<replace-with-client-id>
ENTRA_CLIENT_SECRET=<replace-with-client-secret>
ENTRA_SCOPES=openid,profile,offline_access
AUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/callback
AUTH_JWT_SECRET=replace-with-long-random-string
AUTH_JWT_TTL_SECONDS=3600

# OpenAI
OPENAI_API_KEY=<replace-with-openai-key>

# VOIP provider
VOIP_USERNAME=<replace-with-voip-username>
VOIP_PASSWORD=<replace-with-voip-password>
VOIP_BASE_URL=https://voip.example.com
VOIP_CUSTOMER_ID=

# ConnectWise
CONNECTWISE_COMPANY_ID=<replace>
CONNECTWISE_URL=<replace>
CONNECTWISE_PUBLIC_KEY=<replace>
CONNECTWISE_PRIVATE_KEY=<replace>
CONNECTWISE_CLIENT_ID=<replace>

# Audio processing
EXTENSION_STARTS_WITH=56360
EMBEDDING_CHUNK_SIZE_TOKENS=7500
EMBEDDING_CHUNK_OVERLAP_TOKENS=200
